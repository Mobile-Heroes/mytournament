<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".signup.SignUpOrganizer">



    <TextView
        android:id="@+id/txtviewLogin"
        style="@style/myTournamentBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textSize="15dp"
        android:clickable="true"
        android:text="¿Tienes una cuenta? Inicia sesión aquí"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCancelar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        android:layout_width="129dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        style="@style/myTournamentBody"

        android:text="@string/registrarse"
        android:textSize="12dp"
        app:cornerRadius="1000dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_group" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelar"
        android:layout_width="129dp"
        android:layout_height="41dp"
        android:layout_marginEnd="60dp"
        style="@style/myTournamentBody"

        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/gris_oscuro"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="Cancelar"
        android:textSize="12dp"
        app:cornerRadius="1000dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_group" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtxrUser"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:hint="@string/User"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:errorEnabled="true"
        app:startIconDrawable="@drawable/ic_form_user"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:fontFamily="@font/roboto"
            android:id="@+id/txtUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gris">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtxtEmail"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="@string/email"

        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxrUser"
        app:startIconDrawable="@drawable/ic_fom_email"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:fontFamily="@font/roboto"
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gris"
            >

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtxtName"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Nombre completo o equipo"
        android:inputType="text"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxtEmail"
        app:startIconDrawable="@drawable/ic_form_id"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto"
            android:background="@color/gris">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtxtPassword"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:errorEnabled="true"
        android:hint="Contraseña"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxtName"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/ic_form_password"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPassword"
            android:fontFamily="@font/roboto"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gris"
            app:passwordToggleEnabled="true"
            >
        </com.google.android.material.textfield.TextInputEditText>


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtxRePassword"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:errorEnabled="true"
        android:hint="Confirmar Contraseña"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxtPassword"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/ic_form_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPasswordConfirmation"
            android:fontFamily="@font/roboto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gris"
            android:drawableEnd="@drawable/ic_email"
            android:inputType="textPassword"
            >

        </com.google.android.material.textfield.TextInputEditText>


    </com.google.android.material.textfield.TextInputLayout>


    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="268dp"
        android:layout_height="50dp"

        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxRePassword">

        <RadioButton
            android:id="@+id/radioOrganizador"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"

            android:buttonTint="@color/celeste"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Organizador" />

        <RadioButton
            android:buttonTint="@color/celeste"
            android:textAlignment="center"
            android:id="@+id/radioEquipo"
            android:fontFamily="@font/roboto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Equipo" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:background="@color/azul"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fontFamily="@font/lato"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Crear Cuenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>