<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tournament_cancel"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cl_tournament_start"
        android:layout_marginTop="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cancelar_torneo"
            style="@style/myTournamentTitle"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:enabled="true"
            android:backgroundTint="@color/gris_oscuro"
            android:textAppearance="@style/myTournamentTitle"
            android:textStyle="bold"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:textAllCaps="false"
            android:text="Cancelar torneo"
            app:cornerRadius="1000dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tournament_start"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@+id/cl_tournament_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_iniciar_torneo"
            style="@style/myTournamentTitle"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:enabled="true"
            android:backgroundTint="@color/verde"
            android:textAppearance="@style/myTournamentTitle"
            android:textStyle="bold"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:textAllCaps="false"
            android:text="Iniciar torneo"
            app:cornerRadius="1000dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>