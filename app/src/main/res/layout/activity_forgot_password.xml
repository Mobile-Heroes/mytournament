<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".ForgotPassword">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgetPasswordTitle"
        android:gravity="center"
        style="@style/myTournamentTitle"
        android:layout_marginTop="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtxtForgetPass"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:hint="@string/forgetPasswordEmail"
        android:inputType="textEmailAddress"
        app:boxStrokeColor="@color/celeste"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:startIconDrawable="@drawable/ic_form_id"
        app:startIconTint="@color/celeste">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtForgetPass"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="match_parent"
            android:textAppearance="@style/myTournamentBody"
            android:textSize="15sp"
            android:background="@color/gris"
            android:ems="10"
            android:shadowColor="@color/celeste">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSendData"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        style="@style/myTournamentTitle"
        android:text="@string/forgetPasswordSend"
        app:cornerRadius="1000dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxtForgetPass"
        android:textAllCaps="false"

        />

</androidx.constraintlayout.widget.ConstraintLayout>