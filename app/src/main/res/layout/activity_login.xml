<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/gris">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtxtEmailLogin"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:hint="Usuario"

        android:inputType="textEmailAddress"
        app:boxStrokeColor="@color/celeste"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:startIconDrawable="@drawable/ic_form_id"
        app:startIconTint="@color/celeste"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtLogin"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="match_parent"
            android:textAppearance="@style/myTournamentBody"
            android:textSize="15dp"

            android:background="@color/gris"
            android:ems="10"
            android:shadowColor="@color/celeste">

        </com.google.android.material.textfield.TextInputEditText>


    </com.google.android.material.textfield.TextInputLayout>

