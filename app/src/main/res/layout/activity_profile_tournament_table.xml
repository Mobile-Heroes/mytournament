<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".ProfileTournamentTable">

    <include
        android:id="@+id/in_tournament_table_profile_head"
        layout="@layout/tournament_table_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_tournament_table_body_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textAppearance="@style/myTournamentTitle"
        android:textColor="@color/celeste"
        android:textStyle="bold"
        tools:text="Tipo de tabla"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/in_tournament_table_profile_head"
        />

    <include
        android:id="@+id/in_tournament_table_profile_body"
        layout="@layout/tournament_general_table_body"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tournament_table_body_title"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_tournament"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <include
        android:id="@+id/in_tournament_groups_body"
        layout="@layout/tournament_groups_body"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tournament_table_body_title"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_tournament"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="56dp"
        android:layout_above="@id/bottom_navigation_tournament"
        android:background="@drawable/shadow"
        app:layout_anchorGravity="top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_tournament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul"
        app:headerLayout="@layout/nav_header_main"
        app:itemIconTint="@color/bottom_icons_color"
        app:itemTextColor="@color/bottom_icons_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/nav_menu_tournament" />
</androidx.constraintlayout.widget.ConstraintLayout>