<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_tournament_table_row_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp">

    <RelativeLayout
        android:id="@+id/rl_tournament_table_title_card_wrapper"
        android:background="@color/cafe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">


        <TextView
            android:id="@+id/tv_tournament_table_card_position_title"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="right"
            android:text="No."
            android:textAppearance="@style/myTournamentBody"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/iv_tournament_table_card_image_title"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/iv_tournament_table_card_image_title"
            android:layout_alignBottom="@id/iv_tournament_table_card_image_title"
            android:layout_toEndOf="@id/iv_tournament_table_card_image_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_tournament_table_card_name_title"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Equipo"
                    android:textColor="@color/white"
                    android:textAppearance="@style/myTournamentBody"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_tournament_table_card_matches_title"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:text="PJ"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textAppearance="@style/myTournamentBody"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/tv_tournament_table_card_name_title"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tv_tournament_table_card_goals_done_title"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:text="GF"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textAppearance="@style/myTournamentBody"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/tv_tournament_table_card_matches_title"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tv_tournament_table_card_goals_received_title"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:text="GC"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textAppearance="@style/myTournamentBody"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/tv_tournament_table_card_goals_done_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tv_tournament_table_card_goals_dif_title"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:text="Dif"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textAppearance="@style/myTournamentBody"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/tv_tournament_table_card_goals_received_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tv_tournament_table_card_goals_points_title"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:text="Pts"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textAppearance="@style/myTournamentBody"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/tv_tournament_table_card_goals_dif_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>