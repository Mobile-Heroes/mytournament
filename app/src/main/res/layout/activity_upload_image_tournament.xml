<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".ui.createTournament.upload_image_tournament">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/azul"
        android:paddingTop="8dp"
        android:text="@string/addTournamentPhoto"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        style="@style/myTournamentTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="228dp"
        android:layout_height="200dp"
        android:layout_marginTop="135dp"
        android:contentDescription="@string/imageTournamentDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSelect"
        style="@style/myTournamentTitle"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/uploadPhotoTournament"
        android:textSize="18sp"
        app:cornerRadius="1000dp"
        app:layout_constraintEnd_toEndOf="@+id/ivLogo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ivLogo"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo">
    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmitPhoto"
        style="@style/myTournamentTitle"
        android:layout_height="41dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="28dp"
        android:text="@string/finishRegisterTournament"
        android:textSize="18sp"
        app:cornerRadius="1000dp"
        app:layout_constraintEnd_toEndOf="@+id/btnSelect"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnSelect"
        app:layout_constraintTop_toBottomOf="@+id/btnSelect">
    </com.google.android.material.button.MaterialButton>



</androidx.constraintlayout.widget.ConstraintLayout>